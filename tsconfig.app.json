{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
        "@app/*": ["src/app/*"],
        "@corem/*": ["src/app/core/*"],
        "@shared/*": ["src/app/shared/*"],
        "@recipes/*":["src/app/recipes/*"],
        "@environments/*":["src/environments/*"]
      }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
